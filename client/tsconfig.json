{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],    
    "target": "ESNext",    
    "types": ["vite/client"],
    "isolatedModules": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "paths": {
      "@colors/*":["src/theme/colors/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
